#!/bin/bash
set -euo pipefail
root=$(dirname $(realpath -s $0))
cd $root
if [ ! $(which pystache 2>&1 > /dev/null) ]; then
    [ -d env ] || python3 -m venv env
    set +u
    . env/bin/activate
    set -u
    pip show -q pystache || pip install pystache
fi

if [ $(id -u) -ne 0 ]; then
    printf "### running with sudo...\n\n"
    sudo $0 "$@"
else
    python3 -m fireq.cli "$@"
fi
